<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="lapan.go.id.monitoring">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.REQUEST_COMPANION_RUN_IN_BACKGROUND" />
    <uses-permission android:name="android.permission.REQUEST_COMPANION_USE_DATA_IN_BACKGROUND" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_lapan"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".DetailServer"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transparent1" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.StartUp" />
        <activity
            android:name=".InfoApp"
            android:label="Info Aplikasi"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.StartUp">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lapan.go.id.monitoring.StartupActivity" />
        </activity>
        <activity
            android:name=".DetailViasat"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transparent1" />
        <activity
            android:name=".DetailOrbital"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transparent1" />
        <activity
            android:name=".DetailZodiac"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transparent1" />
        <activity
            android:name=".StartupActivity"
            android:label="Monitoring Suhu Antena"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.StartUp" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transparent.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>